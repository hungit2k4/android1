<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MhDienThoai"
    android:padding="10dp"
    android:orientation="vertical">
    <EditText
        android:id="@+id/edtTenDT"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nhập tên điện thoại"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/edtGia"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nhập giá "
        android:inputType="number"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/edtSoLuong"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="number"
        android:hint="Nhập số lượng "
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/btnLuu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="DANH SÁCH ĐIỆN THOẠI"
        android:textStyle="bold"
        android:textColor="#575757"
        android:layout_marginTop="10dp"
        />
    <ListView
        android:id="@+id/lvDienThoai"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="10dp"/>




</LinearLayout>